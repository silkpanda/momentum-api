{
  "name": "momentum-api",
  "version": "1.0.0",
  "description": "Node.js/Express API for Momentum Family App",
  "main": "dist/server.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "tunnel": "npx ngrok http 3000",
    "dev:tunnel": "concurrently npm:dev npm:tunnel",
    "build": "rimraf dist && tsc",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "test": "jest",
    "db:check": "tsx scripts/check-database.ts",
    "db:clear": "tsx scripts/clear-database.ts",
    "db:clean-links": "tsx scripts/cleanup-orphaned-links.ts",
    "pin:check": "tsx scripts/check-pin-data.ts",
    "pin:debug": "tsx scripts/debug-pin.ts",
    "scripts:list": "ls scripts"
  },
  "keywords": [
    "express",
    "mongoose",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "googleapis": "^166.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^7.0.0",
    "mongoose": "^8.4.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.6",
    "@types/connect": "^3.4.38",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.19.25",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^30.2.0",
    "ngrok": "^5.0.0-beta.2",
    "nodemon": "^3.1.2",
    "prettier": "^3.2.5",
    "rimraf": "^6.1.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.4.5"
  }
}